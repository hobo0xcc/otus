hello: hello.ot lib.o
	../otus $< -o $@.o
	$(CXX) $(CXXFLAGS) -o $@ $@.o lib.o ../runtime.o

float: float.ot lib.o
	../otus $< -o $@.o
	$(CXX) $(CXXFLAGS) -o $@ $@.o lib.o ../runtime.o

